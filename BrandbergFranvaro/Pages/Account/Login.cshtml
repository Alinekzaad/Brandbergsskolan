@page
@model BrandbergFranvaro.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Logga in";
    Layout = "_Layout";
}

<div class="login-container">
    <div class="card login-card shadow">
        <div class="login-header">
            <i class="bi bi-calendar-check d-block"></i>
            <h3 class="mb-0">Brandbergsskolan</h3>
            <small>Frånvarohantering</small>
        </div>
        <div class="card-body p-4">
            <h5 class="card-title text-center mb-4">Logga in</h5>
            
            <form method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">
                        <i class="bi bi-envelope me-1"></i>E-postadress
                    </label>
                    <input asp-for="Input.Email" class="form-control form-control-lg" 
                           placeholder="namn@brandberg.se" autocomplete="email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">
                        <i class="bi bi-lock me-1"></i>Lösenord
                    </label>
                    <input asp-for="Input.Password" class="form-control form-control-lg" 
                           placeholder="••••••••" autocomplete="current-password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <div class="mb-4">
                    <div class="form-check">
                        <input asp-for="Input.RememberMe" class="form-check-input" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            Kom ihåg mig
                        </label>
                    </div>
                </div>
                
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Logga in
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer bg-light text-center py-3">
            <small class="text-muted">
                <i class="bi bi-shield-check me-1"></i>Säker inloggning
            </small>
        </div>
    </div>
    
    <div class="text-center mt-4">
        <div class="card bg-light">
            <div class="card-body py-3">
                <h6 class="card-title mb-2"><i class="bi bi-info-circle me-1"></i>Testkonton</h6>
                <small class="text-muted d-block">
                    <strong>Admin:</strong> admin@brandberg.se<br>
                    <strong>Personal:</strong> personal@brandberg.se<br>
                    <strong>Lösenord:</strong> Password123!
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

