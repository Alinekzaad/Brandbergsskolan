@page
@model BrandbergFranvaro.Pages.Admin.AllaArendenModel
@{
    ViewData["Title"] = "Alla ärenden";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0"><i class="bi bi-folder2-open me-2"></i>Alla ärenden</h1>
    <button type="button" class="btn btn-success" onclick="exportTableToCSV('arendenTable', 'franvaro-export-@(DateTime.Now.ToString("yyyy-MM-dd")).csv')">
        <i class="bi bi-download me-2"></i>Exportera till CSV
    </button>
</div>

<!-- Filter -->
<div class="filter-section">
    <form method="get" class="row g-3 align-items-end">
        <div class="col-md-3">
            <label class="form-label">Person</label>
            <input type="text" asp-for="FilterPerson" class="form-control" placeholder="Sök på namn eller e-post..." />
        </div>
        <div class="col-md-2">
            <label class="form-label">Från datum</label>
            <input type="date" asp-for="FilterFromDate" class="form-control" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Till datum</label>
            <input type="date" asp-for="FilterToDate" class="form-control" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Typ</label>
            <select asp-for="FilterType" class="form-select">
                <option value="">Alla typer</option>
                <option value="1">Sjuk</option>
                <option value="2">VAB</option>
                <option value="3">Semester</option>
                <option value="4">Ledig</option>
                <option value="5">Annat</option>
            </select>
        </div>
        <div class="col-md-2">
            <label class="form-label">Status</label>
            <select asp-for="FilterStatus" class="form-select">
                <option value="">Alla statusar</option>
                <option value="1">Skickad</option>
                <option value="2">Godkänd</option>
                <option value="3">Avslagen</option>
            </select>
        </div>
        <div class="col-md-1">
            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-funnel"></i>
            </button>
        </div>
    </form>
</div>

<!-- Resultat -->
<div class="card">
    <div class="card-body p-0">
        @if (Model.Requests.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="arendenTable">
                    <thead class="table-light">
                        <tr>
                            <th>Person</th>
                            <th>Period</th>
                            <th>Typ</th>
                            <th>Omfattning</th>
                            <th>Status</th>
                            <th>Skapat</th>
                            <th class="text-end">Åtgärder</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model.Requests)
                        {
                            <tr class="@(request.Status == AbsenceStatus.Skickad ? "table-warning" : "")">
                                <td>
                                    <strong>@request.User?.FullName</strong>
                                    <small class="text-muted d-block">@request.User?.Email</small>
                                </td>
                                <td>
                                    <strong>@request.PeriodDisplay</strong>
                                    @if (request.DaysCount > 1)
                                    {
                                        <small class="text-muted d-block">@request.DaysCount dagar</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge @request.Type.ToBadgeClass()">@request.Type.ToSwedish()</span>
                                </td>
                                <td>@request.DayPart.ToSwedish()</td>
                                <td>
                                    <span class="badge @request.Status.ToBadgeClass()">@request.Status.ToSwedish()</span>
                                </td>
                                <td>@request.CreatedAtUtc.ToLocalTime().ToString("yyyy-MM-dd")</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-page="/Admin/Detaljer" asp-route-id="@request.Id" 
                                           class="btn btn-outline-primary" title="Visa/Hantera">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (request.Status == AbsenceStatus.Skickad)
                                        {
                                            <form method="post" asp-page-handler="Approve" asp-route-id="@request.Id" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-success" title="Godkänn snabbt">
                                                    <i class="bi bi-check-lg"></i>
                                                </button>
                                            </form>
                                        }
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@request.Id" 
                                              class="d-inline" onsubmit="return confirm('Är du säker på att du vill ta bort detta ärende permanent?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger" title="Ta bort">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-inbox"></i>
                <h5>Inga ärenden hittades</h5>
                <p class="text-muted">Det finns inga ärenden som matchar ditt filter.</p>
            </div>
        }
    </div>
</div>

@if (Model.Requests.Any())
{
    <div class="mt-3 d-flex justify-content-between align-items-center">
        <small class="text-muted">Visar @Model.Requests.Count ärende(n)</small>
        <small class="text-muted">
            <span class="badge bg-warning text-dark">@Model.PendingCount väntande</span>
        </small>
    </div>
}

