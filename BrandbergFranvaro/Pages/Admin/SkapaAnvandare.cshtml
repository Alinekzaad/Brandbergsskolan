@page
@model BrandbergFranvaro.Pages.Admin.SkapaAnvandareModel
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Hantera användare";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0"><i class="bi bi-people me-2"></i>Hantera användare</h1>
</div>

<div class="row">
    <!-- Formulär för att skapa ny användare -->
    <div class="col-lg-5 mb-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-person-plus me-2"></i>Skapa ny användare</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.FirstName" class="form-label"></label>
                            <input asp-for="Input.FirstName" class="form-control" placeholder="Anna" />
                            <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.LastName" class="form-label"></label>
                            <input asp-for="Input.LastName" class="form-control" placeholder="Andersson" />
                            <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" placeholder="anna.andersson@brandberg.se" />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Role" class="form-label"></label>
                        <select asp-for="Input.Role" class="form-select">
                            <option value="Personal">Personal</option>
                            <option value="Admin">Admin</option>
                        </select>
                        <span asp-validation-for="Input.Role" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        <div class="form-text">
                            Minst 8 tecken, med stor/liten bokstav, siffra och specialtecken.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-person-plus me-2"></i>Skapa användare
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Lista över befintliga användare -->
    <div class="col-lg-7">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-people-fill me-2"></i>Befintliga användare (@Model.Users.Count)</h5>
            </div>
            <div class="card-body p-0">
                @if (Model.Users.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Namn</th>
                                    <th>E-post</th>
                                    <th>Roll</th>
                                    <th class="text-end">Åtgärder</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.Users)
                                {
                                    var isAdmin = await UserManager.IsInRoleAsync(user, "Admin");
                                    var isCurrentUser = (await UserManager.GetUserAsync(User))?.Id == user.Id;
                                    
                                    <tr class="@(isAdmin ? "table-warning" : "")">
                                        <td>
                                            <strong>@user.FullName</strong>
                                        </td>
                                        <td>
                                            <small class="text-muted">@user.Email</small>
                                        </td>
                                        <td>
                                            @if (isAdmin)
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-shield-check me-1"></i>Admin
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-person me-1"></i>Personal
                                                </span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            @if (!isAdmin && !isCurrentUser)
                                            {
                                                <form method="post" asp-page-handler="Delete" asp-route-id="@user.Id" 
                                                      class="d-inline" onsubmit="return confirm('Är du säker på att du vill ta bort @user.FullName? Alla deras ärenden kommer också att tas bort.');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Ta bort användare">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                            else if (isCurrentUser)
                                            {
                                                <span class="badge bg-info">Du</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="empty-state p-4 text-center">
                        <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Inga användare</h5>
                        <p class="text-muted">Det finns inga användare i systemet ännu.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

