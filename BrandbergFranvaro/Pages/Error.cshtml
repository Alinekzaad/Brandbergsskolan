@page
@model BrandbergFranvaro.Pages.ErrorModel
@{
    ViewData["Title"] = "Fel";
}

<div class="text-center py-5">
    <i class="bi bi-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
    <h1 class="mt-3">Ett fel uppstod</h1>
    <p class="text-muted">Vi ber om ursäkt för besväret.</p>
    
    @if (!string.IsNullOrEmpty(Model.RequestId))
    {
        <p class="small text-muted">
            <strong>Förfrågnings-ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <div class="mt-4">
        <a asp-page="/Index" class="btn btn-primary">
            <i class="bi bi-house me-2"></i>Gå till startsidan
        </a>
    </div>
</div>

