@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Brandbergsskolan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-page="/Index">
                <i class="bi bi-calendar-check me-2"></i>Brandbergsskolan
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                @if (SignInManager.IsSignedIn(User))
                {
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">
                                <i class="bi bi-speedometer2 me-1"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Franvaro/Skapa">
                                <i class="bi bi-plus-circle me-1"></i>Registrera frånvaro
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Franvaro/MinaArenden">
                                <i class="bi bi-list-ul me-1"></i>Mina ärenden
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Admin/AllaArenden">
                                    <i class="bi bi-folder2-open me-1"></i>Alla ärenden
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Admin/SkapaAnvandare">
                                    <i class="bi bi-people me-1"></i>Användare
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i>
                                @{
                                    var user = await UserManager.GetUserAsync(User);
                                    @(user?.FullName ?? User.Identity?.Name)
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <span class="badge bg-warning text-dark ms-1">Admin</span>
                                }
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <form asp-page="/Account/Logout" method="post">
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-box-arrow-right me-1"></i>Logga ut
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Account/Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Logga in
                            </a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="bi bi-info-circle me-2"></i>@TempData["InfoMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 bg-light border-top">
        <div class="container text-center text-muted">
            <small>&copy; @DateTime.Now.Year Brandbergsskolan - Frånvarohantering</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

