@page
@model BrandbergFranvaro.Pages.Franvaro.MinaArendenModel
@{
    ViewData["Title"] = "Mina ärenden";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0"><i class="bi bi-list-ul me-2"></i>Mina ärenden</h1>
    <a asp-page="/Franvaro/Skapa" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Ny anmälan
    </a>
</div>

<!-- Filter -->
<div class="filter-section">
    <form method="get" class="row g-3 align-items-end">
        <div class="col-md-3">
            <label class="form-label">Månad</label>
            <input type="month" asp-for="FilterMonth" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Typ</label>
            <select asp-for="FilterType" class="form-select">
                <option value="">Alla typer</option>
                <option value="1">Sjuk</option>
                <option value="2">VAB</option>
                <option value="3">Semester</option>
                <option value="4">Ledig</option>
                <option value="5">Annat</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Status</label>
            <select asp-for="FilterStatus" class="form-select">
                <option value="">Alla statusar</option>
                <option value="1">Skickad</option>
                <option value="2">Godkänd</option>
                <option value="3">Avslagen</option>
            </select>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-funnel me-1"></i>Filtrera
            </button>
        </div>
    </form>
</div>

<!-- Resultat -->
<div class="card">
    <div class="card-body p-0">
        @if (Model.Requests.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Period</th>
                            <th>Typ</th>
                            <th>Omfattning</th>
                            <th>Status</th>
                            <th>Skapat</th>
                            <th class="text-end">Åtgärder</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model.Requests)
                        {
                            <tr>
                                <td>
                                    <strong>@request.PeriodDisplay</strong>
                                    @if (request.DaysCount > 1)
                                    {
                                        <small class="text-muted d-block">@request.DaysCount dagar</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge @request.Type.ToBadgeClass()">@request.Type.ToSwedish()</span>
                                </td>
                                <td>@request.DayPart.ToSwedish()</td>
                                <td>
                                    <span class="badge @request.Status.ToBadgeClass()">@request.Status.ToSwedish()</span>
                                </td>
                                <td>@request.CreatedAtUtc.ToLocalTime().ToString("yyyy-MM-dd")</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-page="/Franvaro/Detaljer" asp-route-id="@request.Id" 
                                           class="btn btn-outline-primary" title="Visa">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (request.Status == AbsenceStatus.Skickad)
                                        {
                                            <a asp-page="/Franvaro/Redigera" asp-route-id="@request.Id" 
                                               class="btn btn-outline-secondary" title="Redigera">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form method="post" asp-page-handler="Delete" asp-route-id="@request.Id" 
                                                  class="d-inline" onsubmit="return confirm('Är du säker på att du vill ta bort detta ärende?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger" title="Ta bort">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-inbox"></i>
                <h5>Inga ärenden hittades</h5>
                <p class="text-muted">Du har inga ärenden som matchar filtret.</p>
                <a asp-page="/Franvaro/Skapa" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Skapa nytt ärende
                </a>
            </div>
        }
    </div>
</div>

@if (Model.Requests.Any())
{
    <div class="mt-3 text-muted">
        <small>Visar @Model.Requests.Count ärende(n)</small>
    </div>
}

